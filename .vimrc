" https://knowledge.sakura.ad.jp/23121/

" 行番号
set number

" カーソルライン
set cursorline

" シンタックスハイライト
syntax enable

" 検索ハイライト
set hlsearch

" インクリメントサーチ
set incsearch

" スマートインデント
set smartindent

" TABの変わりにスペースを入れる
set expandtab

" オートインデントのスペース数を指定する
set shiftwidth=4

" ステータスライン
set laststatus=2

" コマンドライン補完
set wildmenu

" atomカラースキーマ
" https://blog.icchi.me/test-atom-dark-theme-with-vim
set t_Co=256
colorscheme atom-dark-256